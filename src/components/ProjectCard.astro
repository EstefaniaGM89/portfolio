---
const { title, description, technologies, image, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="block transform hover:scale-[1.015] transition-all duration-300 animate-fade-in"
>
  <div class="bg-white rounded-2xl shadow-md border hover:shadow-xl overflow-hidden flex flex-col h-full">
    <div class="w-full bg-gray-50 flex items-center justify-center h-60">
      <img
        src={image}
        alt={title}
        class="object-contain h-full max-h-full p-3"
      />
    </div>
    <div class="p-6 flex flex-col gap-4 flex-1">
      <h3 class="text-xl font-bold text-gray-800">{title}</h3>
      <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
      <div class="flex flex-wrap gap-2 mt-auto">
        {technologies.map(tech => (
          <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded-full">{tech}</span>
        ))}
      </div>
    </div>
  </div>
</a>