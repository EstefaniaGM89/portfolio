---
const { title, description, technologies, image, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="block transform hover:scale-[1.015] transition-all duration-300 animate-fade-in"
>
  <div
    class="bg-gray-200 dark:bg-gray-800 rounded-2xl shadow-md border dark:border-gray-800 hover:shadow-xl overflow-hidden flex flex-col h-full md:min-h-[520px]"
  >
    <!-- Imagen -->
    <div class="w-full h-48 md:h-60 bg-white dark:bg-gray-800">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Contenido -->
    <div class="p-6 flex flex-col gap-4 flex-1">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">{title}</h3>
      <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed flex-1">
        {description}
      </p>
      <div class="flex flex-wrap gap-2 mt-auto">
        {technologies.map((tech) => (
          <span class="text-xs font-bold bg-purple-200 text-purple-800 px-2 py-1 rounded-full">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </div>
</a>
