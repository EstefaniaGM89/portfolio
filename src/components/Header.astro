---
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="sticky top-0 z-50 bg-white dark:bg-gray-900 shadow-sm transition-colors duration-300"
>
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Nombre + Badge -->
    <div class="flex items-center gap-4">
      <a
        href="/"
        class="inline-block px-4 py-2 bg-purple-400 hover:bg-purple-700 dark:bg-purple-700 dark:hover:bg-purple-500 hover:text-white text-black dark:text-white font-semibold rounded-full shadow-md transition duration-300 text-sm sm:text-base"
      >
        Estefan√≠a Garc√≠a
      </a>

      <!-- Badge a la derecha del nombre -->
      <a
        href="https://www.linkedin.com/in/estefaniagm89/"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden sm:inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 hover:bg-green-200 dark:bg-green-900 dark:text-green-100 dark:hover:bg-green-800 transition-colors duration-300"
      >
        <span class="text-base">üíº</span>
        Disponible para trabajar
      </a>
    </div>

    <!-- Bot√≥n dark mode + hamburguesa -->
    <div class="flex items-center gap-4">
      <ThemeToggle />

      <button
        class="md:hidden flex items-center text-gray-700 dark:text-gray-300"
        id="mobile-menu-toggle"
        aria-label="Abrir men√∫"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Men√∫ principal -->
    <nav
      id="mobile-menu"
      class="md:flex items-center gap-8 hidden md:static absolute top-full left-0 w-full md:w-auto bg-white dark:bg-gray-900 md:bg-transparent mt-4 md:mt-0 px-4 md:px-0 py-4 md:py-0 shadow-md md:shadow-none z-40"
    >
      <a
        href="/sobre-mi"
        class="block py-2 md:py-0 text-black dark:text-gray-400 border-b-2 border-transparent hover:border-purple-600 dark:hover:border-purple-400 transition duration-300"
      >
        Sobre m√≠
      </a>

      <a
        href="/proyectos"
        class="block py-2 md:py-0 text-black dark:text-gray-400 border-b-2 border-transparent hover:border-purple-600 dark:hover:border-purple-400 transition duration-300"
      >
        Proyectos
      </a>

      <a
        href="/contacto"
        class="block py-2 md:py-0 text-black dark:text-gray-400 border-b-2 border-transparent hover:border-purple-600 dark:hover:border-purple-400 transition duration-300"
      >
        Contacto
      </a>
    </nav>
  </div>

  <!-- Script externo -->
  <script src="/js/main.js" defer></script>
</header>
