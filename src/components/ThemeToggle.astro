<button
  id="theme-toggle"
  class="ml-4 flex items-center gap-2 text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition"
  aria-label="Cambiar tema"
>
  <!-- ☀️ Sol - visible en modo claro -->
  <svg
    id="sun-icon"
    class="w-6 h-6 block dark:hidden"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="1.5"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 4.5v-2m0 19v-2M4.5 12h-2m19 0h-2
         M6.343 6.343l-1.414-1.414M19.071 19.071l-1.414-1.414
         M6.343 17.657l-1.414 1.414M19.071 4.929l-1.414 1.414
         M12 8.25a3.75 3.75 0 100 7.5 3.75 3.75 0 000-7.5z"
    />
  </svg>

  <!-- 🌙 Luna - visible en modo oscuro -->
  <svg
    id="moon-icon"
    class="w-6 h-6 hidden dark:block"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="1.5"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M21 12.79A9 9 0 1111.21 3a7 7 0 0010.29 9.79z"
    />
  </svg>

  <!-- Texto dinámico -->
  <span id="theme-label" class="text-sm hidden md:inline">Luz encendida</span>
</button>
