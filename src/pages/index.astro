---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <!-- HERO -->
  <section class="py-24 px-6">
    <div
      class="max-w-5xl mx-auto bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-3xl shadow-2xl px-8 py-12 flex flex-col md:flex-row items-center gap-12 text-center md:text-left transition-colors duration-500"
    >
      <div class="flex-shrink-0">
        <img
          src="/img/profile-pic.png"
          alt="Estefan√≠a Garc√≠a - Desarrolladora Web"
          class="w-48 h-48 rounded-full object-cover shadow-2xl border-4 border-white dark:border-gray-700"
        />
      </div>
      <div class="flex-1">
        <h1
          class="text-4xl md:text-5xl font-extrabold leading-tight tracking-tight text-gray-900 dark:text-white mb-4"
        >
          Hey, soy Estefan√≠a üë©‚Äçüíª
        </h1>
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-10">
          <span class="text-purple-600 dark:text-purple-400 font-semibold"
            >Junior Developer</span
          > de Barcelona, Espa√±a
          <img
            src="/img/bandera.png"
            alt="Bandera de Espa√±a"
            class="w-5 h-5 inline-block align-middle rounded-sm shadow-sm ml-1"
          /><br />
          Especializada en <span
            class="text-purple-600 dark:text-purple-400 font-semibold"
            >Desarrollo de Aplicaciones Web</span
          >
          y <span class="text-purple-600 dark:text-purple-400 font-semibold"
            >Marketing Digital</span
          >.
        </p>
        <div class="text-center md:text-left">
          <a
            href="/proyectos"
            class="inline-block bg-gray-400 dark:bg-purple-700 hover:bg-purple-600 dark:hover:bg-purple-600 hover:text-white text-black dark:text-white px-8 py-4 rounded-full text-lg font-semibold shadow-md transition duration-300"
          >
            Ver proyectos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- HABILIDADES FLOATING BALLS -->
  <section class="relative py-32 overflow-hidden">
    <h2
      class="text-4xl font-bold text-gray-900 dark:text-white text-center mb-12"
    >
      Habilidades
    </h2>
    <div class="relative w-full h-[400px]">
      <!-- Cada bola tiene un evento de explosi√≥n -->
      <div
        class="floating-skill"
        style="top: 20px; left: 10%; animation-delay: 0s"
      >
        <img src="/img/html5.png" alt="HTML5" class="w-16 h-16" />
      </div>
      <div
        class="floating-skill"
        style="top: 100px; left: 40%; animation-delay: 1s"
