---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es" class="invisible">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Estefan√≠a | Portfolio</title>

    <!-- Preinicializa el tema sin parpadeo -->
    <script is:inline>
      (() => {
        const theme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const isDark = theme === "dark" || (!theme && prefersDark);
        document.documentElement.classList.toggle("dark", isDark);
        document.documentElement.classList.remove("invisible");
      })();
    </script>

    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white transition-colors duration-300">
    <Header />
    <main class="min-h-screen px-4 md:px-12 py-6 max-w-5xl mx-auto">
      <slot />
    </main>
    <Footer />

    <script src="/js/main.js" defer></script>
  </body>
</html>
