---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es" class="invisible">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Estefanía | Portfolio</title>
    <link rel="icon" href="/gamer.ico" type="image/x-icon" />

    <!-- META para compartir -->
    <meta property="og:title" content="Estefanía | Portfolio de Desarrolladora Web" />
    <meta property="og:description" content="Soy Full Stack Junior Developer especializada en desarrollo web y marketing digital." />
    <meta property="og:image" content="https://estefaniagm-portfolio.vercel.app/img/chibi.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://estefaniagm-portfolio.vercel.app" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Estefanía | Portfolio" />
    <meta name="twitter:description" content="Full Stack Junior Developer con pasión por la tecnología y el aprendizaje constante." />
    <meta name="twitter:image" content="https://estefaniagm-portfolio.vercel.app/img/chibi.png" />

    <!-- Preinicializa el tema sin parpadeo -->
    <script is:inline>
      (() => {
        const theme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const isDark = theme === "dark" || (!theme && prefersDark);
        document.documentElement.classList.toggle("dark", isDark);
        document.documentElement.classList.remove("invisible");
      })();
    </script>

    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white transition-colors duration-300">
    <Header />
    <main class="min-h-screen px-4 md:px-12 py-6 max-w-5xl mx-auto">
      <slot />
    </main>
    <Footer />

    <script src="/js/main.js" defer></script>
  </body>
</html>
